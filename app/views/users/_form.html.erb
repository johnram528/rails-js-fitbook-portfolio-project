<%=form_for @user do |f| %>
  <%if @user.height.nil?%>
    <%=f.label :height %> (In Inches)
    <%=f.text_field :height %><br>
    <%=f.label :weight %>
    <%=f.text_field :weight %><br>
    <%=f.submit%>
  <%else%>
    <%=f.label :weight %>
    <%=f.text_field :weight %><br>
    <%=f.submit%>
  <%end%>
 <%end%> 
